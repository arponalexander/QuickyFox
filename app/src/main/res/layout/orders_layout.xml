<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_linear"
        android:padding="10dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Username: "
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="Phone Number: "
            android:textAlignment="textEnd"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:text="Total Price: "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_below="@+id/order_phone_number"
            android:layout_marginTop="25dp"/>
        <TextView
        android:id="@+id/order_address_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:text="City Address "
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_below="@+id/order_total_price"
        android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Date and Time "
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_below="@+id/order_address_city"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:text="Note:"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_below="@+id/order_date_time"
            >

        </TextView>


        <Button
            android:id="@+id/show_all_products_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="Show Order Details"
            android:padding="15dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/shadow_linear"
            android:textAllCaps="false"
            android:layout_below="@+id/order_note"
            />


    </RelativeLayout>

</RelativeLayout>