<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceProvider.SellerHomeActivity"
    android:background="@color/AliceBlue">


    <RelativeLayout
        android:id="@+id/relativeLayout_seller_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/txt_services"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:text="My Services"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/seller_home_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="544dp"
            android:layout_below="@+id/txt_services"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp">

        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/relativeLayout_seller_home2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-717dp"
            app:layout_editor_absoluteX="0dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_bar_seller_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/SmokeWhite"
                app:itemIconTint="@color/colorPrimary"
                app:menu="@menu/nav_items">

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>