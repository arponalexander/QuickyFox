<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <ImageView
        android:id="@+id/bnb_admin"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_above="@+id/admin_check_service_provider_btn"
        android:layout_marginBottom="16dp"
        android:src="@drawable/foxworklogo" />

    <Button
        android:id="@+id/admin_maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/admin_check_services_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shadow_linear"
        android:padding="5dp"
        android:text="Maintain Services"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"

        />
    <Button
        android:id="@+id/admin_check_service_provider_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@id/admin_maintain_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shadow_linear"
        android:padding="5dp"
        android:text="Check Service Providers"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/admin_check_services_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/check_approve_new_services"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shadow_linear"
        android:padding="5dp"
        android:text="Check New Requested Services"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/check_approve_new_services"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/shadow_linear"
        android:padding="5dp"
        android:text="Check and Approve New Services"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/shadow_linear"
        android:padding="5dp"
        android:text="Logout"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textAllCaps="false"
        />
</RelativeLayout>