<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity"
    android:background="@color/SmokeWhite">


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reset Password"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone number: "
        android:layout_below="@+id/relative1"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_phone"
        android:hint="Phone number"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the following Security Questions: "
        android:textAlignment="center"
        android:layout_below="@+id/find_phone_number"
        android:textSize="23sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/text_question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's your pet name?"
        android:layout_below="@+id/title_questions"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_question_1"
        android:hint="answer question 1"
        android:layout_margin="15dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/text_question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What's your first ex's name?"
        android:layout_below="@+id/question_1"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_question_2"
        android:hint="answer question 2"
        android:layout_margin="15dp"
        android:padding="10dp"
        />
    
    <Button
        android:id="@+id/verify_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_2"
        android:text="Verify"
        android:textSize="20sp"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:textAllCaps="false"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="@drawable/shadow_linear"
        />




</RelativeLayout>