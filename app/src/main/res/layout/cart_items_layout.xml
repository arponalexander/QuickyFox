<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    android:background="@color/AliceBlue"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/shadow_linear"
        android:padding="5dp">

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Service Name: "
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/cart_product_category"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_below="@+id/cart_product_name"
            android:text="Service Category: "
            android:textColor="@android:color/black"
            android:textSize="16dp"
            />
        <TextView
        android:id="@+id/cart_product_seller_name"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_below="@+id/cart_product_category"
        android:text="Service Provider: "
        android:textColor="@android:color/black"
        android:textSize="16dp"
        />

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:layout_below="@+id/cart_product_seller_name"
            android:text="Service Price: "
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cart_product_quantity"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:layout_below="@+id/cart_product_price"
            android:text="Number of hours: "
            android:textColor="@android:color/black"
            android:textSize="16dp"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>